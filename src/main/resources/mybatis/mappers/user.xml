<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	
	<!-- 쿼리문 작성 -->
	<resultMap id="resultMapUserVo" type="com.javaex.vo.UserVo" >
	    <result column="userNo" property="userNo" />
	    <result column="id" property="id" />
	    <result column="userName" property="userName" />
	    <result column="password" property="password" />
	    <result column="joinDate" property="joinDate" />
	</resultMap>
	
	
	<!-- ajax - selectList 유저리스트 -->
	<select id="selectList" resultType="UserVo">
		<![CDATA[
			select  userNo,
					id,
					userName,
					password,
					joinDate
			from users
			order by joinDate desc
		]]>
	</select>
	
	
	
	
	
	
	
	
	<!-- 회원가입 insert -->
	<insert id="userInsert" parameterType="UserVo">
		<![CDATA[
			insert into users
			values(seq_users_no.nextval, #{id}, #{userName}, #{password},  sysdate)
		]]>
	</insert>
	
	
	<!-- 로그인 - 사용자 정보 가져오기 -->
	<select id="getUser" parameterType="UserVo" resultMap="resultMapUserVo">
		<![CDATA[
			select  userNo,
					userName
			from users
			where id = #{id}
				and password = #{password}
		]]>
	</select>

</mapper>